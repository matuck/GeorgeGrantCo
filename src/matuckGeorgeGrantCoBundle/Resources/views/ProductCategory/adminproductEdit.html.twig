{% extends '::base.html.twig' %}

{% block body %}
    <h1>Edit Category</h1>
    {{ form_start(categoryform) }}
        {{ form_row(categoryform.name) }}
        {{ form_row(categoryform.description) }}
        {{ form_row(categoryform.pretext) }}
        {{ form_row(categoryform.posttext) }}
    <div class="hidden">
        {{ form_widget(categoryform) }}
    </div>
    <a href="{{ path('adminproductcategory') }}" class="btn btn-primary pull-right" role="button">Cancel</a>
    <button type="submit" value="Submit" class="btn btn-primary pull-right">Save</button>
    {{ form_end(categoryform) }}
{% endblock %}
